@model StormPDP.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<br />
<br />

<div class="container-reg">
    <div class="row-reg">
        <div class="form-group col s12" id="form">
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4 style="color:teal; text-align:center">Create a new account</h4>
                <br />
                <div class="row-reg">
                    <div class="input-field col s12">
                        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row-reg">
                    <div class="input-field col s12">
                        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row-reg">
                    <div class="input-field col s12">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })

                    </div>
                </div>
                <div class="row-reg">
                    <div class="input-field col s6">
                        <button class="btn btn-large btn-register waves-effect waves-light" type="submit" value="Register">
                            Register
                            <i class="material-icons right">done</i>
                        </button>
                    </div>
                </div>
                <a class="ngl btn-floating btn-large waves-effect waves-light red">
                    <i class="material-icons">input</i>
                </a>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

