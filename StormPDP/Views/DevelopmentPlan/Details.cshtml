@using StormPDP.Models
@model DevelopmentPlan

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="list-group">
    <a class="list-group-item list-group-item-action flex-column align-items-start active">
        <div class="d-flex w-100 justify-content-between">
            <h3 class="mb-1">@Model.Employee.Name</h3>
            <small>@Model.DateCreated.Value.ToShortDateString()</small>
        </div>
        @if (Model.QuarterlyReviewDate < DateTime.Today)
        {
            <div class="alert alert-dismissible alert-danger">
                <strong>Quarterly Review date has passed!</strong>
            </div>
        }
        @if (Model.AnnualReviewDate < DateTime.Today)
        {
            <div class="alert alert-dismissible alert-danger">
                <strong>Annual Review date has passed!</strong>
            </div>
        }
        <p class="mb-1">Development Plan</p>
        <p class="mb-1">ID: @Model.Id</p>
        <br />
        <div class="list-group">
            <ul>
                <li class="list-group-item d-flex justify-content-between align-items-center"><b>Storm ID: </b>@Model.Employee.StormId</li>
                <li class="list-group-item d-flex justify-content-between align-items-center"><b>Current Role: </b>@Model.CurrentRole</li>
                <li class="list-group-item d-flex justify-content-between align-items-center"><b>Current Certificates: </b>@Model.CurrentCertification</li>
                <li class="list-group-item d-flex justify-content-between align-items-center"><b>Function: </b>@Model.Function</li>
                <li class="list-group-item d-flex justify-content-between align-items-center"><b>Comments: </b>@Model.Comment</li>
                <li class="list-group-item d-flex justify-content-between align-items-center"><b>Employee's Comments: </b>@Model.EmployeeComment</li>
                <li class="list-group-item d-flex justify-content-between align-items-center"><b>Manager's Comments: </b>@Model.ManagerComment</li>
                <li class="list-group-item d-flex justify-content-between align-items-center"><b>Employee Rating: </b>@Model.EmployeeRating</li>
                <li class="list-group-item d-flex justify-content-between align-items-center"><b>Manager Rating: </b>@Model.ManagerRating</li>
                <li class="list-group-item d-flex justify-content-between align-items-center"><b>Agreed Rating: </b>@Model.AgreedRating</li>
                <li class="list-group-item d-flex justify-content-between align-items-center"><b>Quarterly Review Date: </b>@Model.QuarterlyReviewDate.Value.ToShortDateString()</li>
                <li class="list-group-item d-flex justify-content-between align-items-center"><b>Annual Review Date: </b>@Model.AnnualReviewDate.Value.ToShortDateString()</li>
            </ul>
        </div>
    </a>
</div>
<div>
    <div class="card-body">
        @Html.ActionLink("Export as PDF", "ExportDetails", "DevelopmentPlan",
            new { id = Model.Id },
            new { @class = "btn btn-primary btn-sm" })
    </div>
</div>
<br />
<br />
<br />
<br />



<div class="row col-md-12">
    <div>
        @Html.Label("Manager Signature: ")
        <input class="col-md-6"/>
    </div>
    <br />
    <div>
        @Html.Label("Employee Signature: ")
        <input class="col-md-6"/>
    </div>
</div>